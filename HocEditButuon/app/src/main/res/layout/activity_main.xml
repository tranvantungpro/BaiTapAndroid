<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.trantung.hoctexteditbutton.Main2Activity">

    <TextView
        android:text="Nhập tên:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtNhapTen"
        android:background="@android:color/holo_green_dark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtNhapdt"
        android:background="@android:color/background_light"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/txtNhap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="0980000022" />

    <TextView
        android:text="Nhập số điện thoại"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNhapSDT"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/txtNhap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtNhap"
        android:hint="Bạn nhapp ten:"
        android:layout_below="@+id/txtNhapTen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/background_light" />

    <Button
        android:text="Gửi thông tin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGuiThongTin"
        android:layout_below="@+id/txtNhapdt"
        android:layout_centerHorizontal="true" />

</LinearLayout>
